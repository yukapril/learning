.title{
  padding-bottom: 10rpx;
  width: 90%;
  font-size: 40rpx;
  font-weight: 900;
  color: #999;
  text-align: center;
  border-bottom: 2rpx solid #ddd;
}

.list {
  margin-top: 20rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.list .item{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 10rpx;
  background: #f2f2f2;
  text-align: center;
}

.list .no{
  text-align: center;
  color: #c00;
}
.list .name{
  font-size: 32rpx;
  font-weight: 900;
}
.list .desc{
  color: #999;
}

.list .datas{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.list .img{
  display: block;
  margin: 0 auto;
  width: 200rpx; 
  height: 200rpx; 
  background-color: #eeeeee;
}
.list .author{
  display: block;
}


.list .count{
  margin-right: 10rpx;
}
.list .count .type{
  display: inline-block;
  padding: 6rpx 20rpx;
  border: 1rpx solid #d5d5d5;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  background-image: linear-gradient(#fcfcfc, #eee);
}
.list .count .number{
  display: inline-block;
  padding: 6rpx 20rpx;
  border: 1rpx solid #d5d5d5;
  border-left: 0;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  background:#fff;
}